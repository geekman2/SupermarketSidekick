<?xml version='1.0' encoding='utf-8'?>
<widget id="com.epic.supermarket.sidekick" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SQLitePlugin">
        <param name="android-package" value="io.liteglue.SQLitePlugin" />
    </feature>
    <allow-intent href="market:*" />
    <name>SupermarketSidekick</name>
    <description>
        An app that allows you to search grocery store aisles
    </description>
    <author email="mandudeical@gmail.com" href="fulminatatech.com">
        Fulminata Tech
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
</widget>
