<?xml version='1.0' encoding='utf-8'?>
<widget id="com.fulminatatech.sidekick" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>SupermarketSidekick</name>
    <description>
        An app that allows you to search grocery store aisles
    </description>
    <author email="fulminata@fulminatatech.com" href="fulminatatech.com">
        Fulminata Tech
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <gap:plugin name="com.brodysoft.sqliteplugin" version="1.0.4" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
